<h1 class="text-center">Eat-Da-Burger!</h1>

<hr>

<div class="container">
    <div class="row">
        <div class="col-md">
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{>burgers/burger-block devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>

        
        <div class="col">
            <form class="create-form">
                <div class="form-group">
                    <input type="text" id="burgerName" name="name">
                </div>
                <div class="col-md-8">
                    <button class="btn btn-primary" type="submit">Submit</button>
                </div>


                <div class="form-group">
                    <p>Enter a burger you want to eat. Click the "Submit" button.</p>
                </div>
            </form>
        </div>

        <div class="col-md-4">
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{>burgers/burger-block devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>