<div class="container">
    <div class="row">
        <div class="col">
            <h1>Eat-Da-Burger!</h1>
        </div>
    </div>
</div>

<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block sleep=true}}
    {{/unless}}
  {{/each}}
</ul>



<ul>
  {{#each burgers}}
    {{#if sleepy}}
      {{> burgers/burger-block sleep=false}}
    {{/if}}
  {{/each}}
</ul>

